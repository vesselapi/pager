{
  "extends": "@vessel/tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "jsx": "react-native",
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "types": ["nativewind/types"]
  },
  "include": [
    "src",
    "*.ts",
    "index.tsx",
    "*.js",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "../../packages/api/env.mjs"
  ],
  "exclude": ["node_modules"]
}
